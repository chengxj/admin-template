           overflowToDisk="false" statistics="true">
    </cache>

	<cache name="Cache" maxElementsInMemory="1000000"
		timeToIdleSeconds="3600" timeToLiveSeconds="0" overflowToDisk="false"
		statistics="true">
	</cache>

</ehcache>